% Use mdframed to shade the background of theorems

% Load packages
\let\openbox\relax % Workaround to get rid of an annoying error
\RequirePackage{kvoptions} % Handle package options

\SetupKeyvalOptions{
    family = mdftheorems,
    prefix = mdftheorems@
}

\newcommand{\mdftheorems@defaultbg}{Goldenrod!45!white}
\DeclareStringOption[\mdftheorems@defaultbg]{background}
\DeclareStringOption[\mdftheorems@defaultbg]{theorembackground}
